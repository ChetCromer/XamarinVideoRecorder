<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XamarinVideoRecorder" x:Class="XamarinVideoRecorder.XamarinVideoRecorderPage">

	<ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="0, 20, 0, 0" />
  </ContentPage.Padding>
	
	<StackLayout VerticalOptions="FillAndExpand">
		<StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Padding="10" MinimumHeightRequest="50">
			<Button Text="Start Preview" Clicked="Handle_StartPreviewing" />
			<Button Text="Start Record" Clicked="Handle_StartRecording" />
			<Button Text="Stop Record" Clicked="Handle_StopRecording" />
			<Button Text="Stop Preview" Clicked="Handle_StopPreviewing" />
		</StackLayout>
		<local:VideoRecorder x:Name="video" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Landscape" Camera="Front"/>
		<StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Padding="10" MinimumHeightRequest="50">
		<Button Text="Play Video" Clicked="Handle_PlayVideo"/>
		</StackLayout>
	</StackLayout>
</ContentPage>