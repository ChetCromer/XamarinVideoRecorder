<?xml version="1.0" encoding="utf-8"?>
<ContentPage Title="Record" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XamarinVideoRecorder" x:Class="XamarinVideoRecorder.XamarinVideoRecorderPage">
<!--	<ScrollView>
-->		<StackLayout VerticalOptions="FillAndExpand">
			<StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Padding="10" MinimumHeightRequest="50">
				<Button Text=" Preview " Clicked="Handle_StartPreviewing"  BorderWidth="1" />
				<Button Text=" Record " Clicked="Handle_StartRecording" BorderWidth="1" />
				<Button Text=" Stop Record " Clicked="Handle_StopRecording" BorderWidth="1" />
				<Button Text=" Stop Preview " Clicked="Handle_StopPreviewing" BorderWidth="1" />
			</StackLayout>
			<local:VideoRecorder x:Name="video" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Landscape" Camera="Front" />
			<StackLayout VerticalOptions="End" HorizontalOptions="CenterAndExpand" Orientation="Horizontal" Padding="10" MinimumHeightRequest="50">
				<Button Text=" Play Video " Clicked="Handle_PlayVideo" BorderWidth="1" />
			</StackLayout>
		</StackLayout>
<!--	</ScrollView>
--></ContentPage>